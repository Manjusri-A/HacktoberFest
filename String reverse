#include <stdio.h>
#include <string.h>

int main() {  
    char mess[80], stress[80];
    int i, j, len;

    // Prompt for user input
    printf("Enter any string: ");
    
    // Use %79s to avoid buffer overflow (leaves room for the null terminator)
    scanf("%79s", mess);  // No need for & when using a char array

    // Get the length of the input string
    len = strlen(mess);

    // Reverse the string
    j = 0;
    for (i = len - 1; i >= 0; i--) {
        stress[j++] = mess[i];
    }

    // Null terminate the reversed string
    stress[j] = '\0';

    // Print the reversed string
    printf("The reversed string is: %s\n", stress);

    return 0;
}
